 <main>
  <section id="top" class="slide">
    <header class="container">
      <h1 class="main-title">Hi, I'm Sarah Federman</h1>
      <h2 class="sub-title">I'm a creative web developer</h2>
    </header>

    <video preload="auto" autoplay loop>
      <source src="img/vid-bg-1.mp4" />
      <source src="img/vid-bg-2.ogg" />
    </video>
  </section>

  <span id="work"></span>

  {{#each projects}}
  <section class="slide {{slug}}" style="background-image: url({{imageUrl backgroundImage w=1200 fit=clip}});">
    <div class="container">
      <h3>{{subtitle}}</h3>
      <h2>{{title}}</h2>
      <p class="description">{{description}}</p>
      <a class="button" href="{{slug}}">Learn More</a>
    </div>
    <div class="overlay" data-bottom-center="opacity: .8" data-center-center="opacity: .3" data-top-center="opacity: .8"></div>
  </section>
  {{/each}}

  <section id="about" class="slide grid">
    <div class="top text block">
      <img class="avatar" src="http://www.gravatar.com/avatar/148c50692de4bba666cf835cca5aacf3" alt="Sarah Federman">
