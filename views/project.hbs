{{#if content.backgroundImage}}
  {{!-- use specific image for project --}}
  <div style="background-image: url({{imageUrl content.backgroundImage}})" class="header-image {{slug}}"></div>
{{else}}
  {{!-- fallback to homepage image --}}
  <div style="background-image: url({{imageUrl backgroundImage}})" class="header-image {{slug}}"></div>
{{/if}}

<main class="work">
  <section class="slide light">
    <div class="container">
      <h1 class="main-title">{{title}}</h1>
      <h2 class="sub-title first">{{subtitle}}</h2>
      <div class="left-col">
        {{{content.description}}}
        {{>tag-cloud}}
      </div>

      <div class="right-col">
        {{#if logo}}
        <img class="logo" src="{{imageUrl logo}}" alt="{{slug}} logo">
        {{/if}}
        {{#if liveSite}}
          <a href="{{liveSite}}" class="button dark" target="_blank">Live Site</a>
        {{/if}}
        {{#if repo}}
          <a href="{{repo}}" class="button dark" target="_blank">Github Repo</a>
        {{/if}}
      </div>
    </div>
  </section>

  {{!-- loop over content slides --}}
  {{#each content.slides as |slide|}}
    {{>slide slide}}
  {{/each}}

  <section class="slide dark last">
    <div class="container">
      <h2>Final Thoughts</h2>
      {{{content.finalThoughts}}}
      <div class="buttons">
        {{#if liveSite}}
          <a href="{{liveSite}}" class="button white" target="_blank">Live Site</a>
        {{/if}}
        {{#if repo}}
          <a href="{{repo}}" class="button white" target="_blank">Github Repo</a>
        {{/if}}
      </div>
    </div>
  </section>

</main>

<footer>
  <a class="previous" href="{{host}}/projects/{{prev}}">&lt; &nbsp; Previous Project</a>
  <a class="next" href="{{host}}/projects/{{next}}">Next Project &nbsp; &gt;</a>
</footer>   